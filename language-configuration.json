{
  "comments": {
    "lineComment": "//",
    "blockComment": ["/*", "*/"]
  },
  "brackets": [
    ["{", "}"],
    ["[", "]"],
    ["(", ")"]
  ],
  "autoClosingPairs": [
    { "open": "{", "close": "}" },
    { "open": "[", "close": "]" },
    { "open": "(", "close": ")" },
    { "open": "\"", "close": "\"", "notIn": ["string"] }
  ],
  "surroundingPairs": [
    { "open": "{", "close": "}" },
    { "open": "[", "close": "]" },
    { "open": "(", "close": ")" },
    { "open": "\"", "close": "\"" }
  ],
  "folding": {
    "markers": {
      "start": "^\\s*/\\*",
      "end": "^\\s*\\*/"
    }
  },
  "indentationRules": {
    "increaseIndentPattern": "^.*(\\bwhere\\b|\\bcompose\\b|\\bdata\\b|\\btrait\\b|\\binstance\\b).*$",
    "decreaseIndentPattern": "^\\s*\\|"
  },
  "wordPattern": "[a-zA-Z_][a-zA-Z0-9_']*|\\{[^}]+\\}"
}
