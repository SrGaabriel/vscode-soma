{
    "name": "soma-lang",
    "displayName": "Soma Language",
    "description": "Soma language support powered by SouLS",
    "version": "0.0.1",
    "engines": {
        "vscode": "^1.107.0"
    },
    "categories": [
        "Programming Languages"
    ],
    "keywords": [
        "soma",
        "language",
        "lsp",
        "language-server",
        "syntax-highlighting",
        "semantic-tokens"
    ],
    "publisher": "SomaLang",
    "repository": {
        "type": "git",
        "url": "https://github.com/SrGaabriel/vscode-soma"
    },
    "license": "Apache-2.0",
    "activationEvents": [
        "onLanguage:soma"
    ],
    "main": "./dist/extension.js",
    "contributes": {
        "languages": [
            {
                "id": "soma",
                "aliases": [
                    "Soma",
                    "soma"
                ],
                "extensions": [
                    ".soma"
                ],
                "configuration": "./language-configuration.json"
            }
        ],
        "grammars": [
            {
                "language": "soma",
                "scopeName": "source.soma",
                "path": "./syntaxes/soma.tmLanguage.json"
            }
        ],
        "commands": [
            {
                "command": "soma.restartServer",
                "title": "Soma: Restart Language Server",
                "category": "Soma"
            },
            {
                "command": "soma.showOutput",
                "title": "Soma: Show Output",
                "category": "Soma"
            }
        ]
    },
    "scripts": {
        "vscode:prepublish": "npm run package",
        "compile": "npm run check-types && npm run lint && node esbuild.js",
        "watch": "npm-run-all -p watch:*",
        "watch:esbuild": "node esbuild.js --watch",
        "watch:tsc": "tsc --noEmit --watch --project tsconfig.json",
        "package": "npm run check-types && npm run lint && node esbuild.js --production",
        "compile-tests": "tsc -p . --outDir out",
        "watch-tests": "tsc -p . -w --outDir out",
        "pretest": "npm run compile-tests && npm run compile && npm run lint",
        "check-types": "tsc --noEmit",
        "lint": "eslint src",
        "test": "vscode-test"
    },
    "devDependencies": {
        "@types/mocha": "^10.0.10",
        "@types/node": "22.x",
        "@types/vscode": "^1.107.0",
        "@vscode/test-cli": "^0.0.12",
        "@vscode/test-electron": "^2.5.2",
        "esbuild": "^0.27.1",
        "eslint": "^9.39.1",
        "npm-run-all": "^4.1.5",
        "typescript": "^5.9.3",
        "typescript-eslint": "^8.48.1"
    },
    "dependencies": {
        "vscode-languageclient": "^9.0.1"
    }
}
